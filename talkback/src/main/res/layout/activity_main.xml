<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开无障碍设置" />

        <LinearLayout
            android:id="@+id/choose_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navigation_bar">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="启用语音输入" />

            <Switch
                android:id="@+id/switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/test"
            android:id="@+id/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/navigation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="启用非同切换" />

            <Switch
                android:id="@+id/navigation_switcher"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:checked="false"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/speech_speed"
            android:layout_below="@id/speech_pitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="语速" />

            <EditText
                android:id="@+id/speechSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="135"
                android:inputType="numberDecimal"
                />
            <!--<SeekBar-->
                <!--android:id="@+id/speechSpeed"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:max="200"-->
                <!--android:progress="135"-->
                <!--android:layout_weight="1" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/speech_pitch"
            android:layout_below="@id/speech_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="音调" />

            <EditText
                android:id="@+id/speechPitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="60"
                android:inputType="numberDecimal"
                />
            <!--<SeekBar-->
                <!--android:id="@+id/speechPitch"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:max="100"-->
                <!--android:progress="60"-->
                <!--android:layout_weight="1" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/speech_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="音量" />
            <EditText
                android:id="@+id/speechVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50"
                android:inputType="numberDecimal"
                />

            <!--<SeekBar-->
                <!--android:id="@+id/speechVolume"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:max="100"-->
                <!--android:progress="50"-->
                <!--android:layout_weight="1" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/speech_speed"
            android:orientation="horizontal">

            <Button
                android:id="@+id/test_button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试" />

            <Button
                android:id="@+id/confirm_button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认语音配置" />
        </LinearLayout>


        <TextView
            android:layout_below="@id/navigation_bar"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="触发方式：\n 1)双击音量下键\n 2)全局手势：先下滑再上滑 \n\n 手势: \n1)左右滑选择候选\n2)下滑执行命令\n3)双指左滑清空输入"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>